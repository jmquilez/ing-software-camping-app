<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARCELAS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordenar por:"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/parcel_sort_id_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ID"
                android:textSize="11sp"
                android:maxLines="2"
                android:gravity="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/parcel_sort_occupants_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:text="Máx.\nocupantes"
                android:textSize="11sp"
                android:maxLines="2"
                android:gravity="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/parcel_sort_price_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="€/persona"
                android:textSize="11sp"
                android:maxLines="2"
                android:minLines="2"
                android:gravity="center"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary"
            android:layout_marginHorizontal="16dp"
            android:alpha="0.2"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/parcel_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                android:fadeScrollbars="false"
                android:padding="8dp"
                android:clipToPadding="false"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary"
            android:layout_marginHorizontal="16dp"
            android:alpha="0.2"/>

    </LinearLayout>

    <Button
        android:id="@+id/parcel_create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR NUEVA PARCELA"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"/>

</LinearLayout>
