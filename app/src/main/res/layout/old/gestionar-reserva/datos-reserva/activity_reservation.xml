<!-- app/src/main/res/layout/activity_reservation_details.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESERVA abf8369d"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del cliente :"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/client_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guillermo ..."
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teléfono del cliente :"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/client_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="+34 637 ..."
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de entrada :"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/check_in_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="08/10/..."
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de salida :"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/check_out_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15/10/..."
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio total: 52 €"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/2\nDATOS RESERVA"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/save_changes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GUARDAR CAMBIOS"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:padding="12dp" />

        <Button
            android:id="@+id/notify_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOTIFICAR CLIENTE"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:padding="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/delete_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ELIMINAR RESERVA"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp" />
</LinearLayout>