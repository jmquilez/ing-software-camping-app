<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base dark application theme. -->
    <style name="Base.Theme.Camping" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="fontFamily">@font/nunito_font_family</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_dark</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:textViewStyle">@style/TransparentTextView</item>
    </style>

    <style name="Theme.Camping" parent="Base.Theme.Camping" />

    <style name="TransparentTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>