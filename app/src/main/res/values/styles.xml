<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@color/dialogTextColor</item>
        <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="fontFamily">@font/nunito_font_family</item>
    </style>

    <style name="CustomDialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dialogTitleColor</item>
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="fontFamily">@font/nunito_font_family</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App font families -->
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="fontFamily">@font/nunito_font_family</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:alpha">1.0</item>
        <item name="android:disabledAlpha">0.38</item>
    </style>
</resources>
